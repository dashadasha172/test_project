{% extends 'base.html.twig' %}

{% block title %}Войти{% endblock %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <label class="control-label" for="username">Логин:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Логин" required autofocus/>
    </div>
    <div class="form-group">
        <label cfor="password" class="control-label">Пароль:</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Пароль" required/>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Ок</button>
</form>

{% endblock %}